{
	"name": "tropicalt",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --hostname 0.0.0.0",
		"build": "next bpuild",
		"start": "next start",
		"storybook": "start-storybook -p 6006 -c .storybook",
		"build-storybook": "storybook build",
		"test": "jest",
		"test:static": "npm run check-types && npm run lint && npm run prettier:validate",
		"types": "tsc --noEmit",
		"prettier": "prettier './components/**/*.+(ts|tsx|json|graphq|scss)' --write",
		"lint": "eslint './**/*.js' './**/*.ts' './**/*.tsx' --fix",
		"stylelint": "stylelint './**/*.scss' --fix",
		"fixall": "npm run prettier && npm run stylelint && npm run lint",
		"codegen": "graphql-codegen --config codegen.yml"
	},
	"dependencies": {
		"@apollo/react-hooks": "^3.1.3",
		"@apollo/react-ssr": "^3.1.3",
		"apollo-boost": "^0.4.7",
		"axios": "^0.19.0",
		"graphql": "^14.5.8",
		"isomorphic-unfetch": "^3.0.0",
		"moment": "^2.24.0",
		"next": "^9.2.1",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-hook-form": "^4.5.6",
		"react-markdown": "^4.2.2",
		"react-moment": "^0.9.7",
		"sass": "^1.25.0",
		"yup": "^0.28.0"
	},
	"devDependencies": {
		"@babel/core": "^7.7.7",
		"@babel/plugin-proposal-optional-chaining": "^7.7.5",
		"@babel/plugin-transform-react-jsx": "^7.8.3",
		"@babel/plugin-transform-typescript": "^7.8.3",
		"@babel/preset-typescript": "^7.8.3",
		"@storybook/addon-info": "^5.3.7",
		"@storybook/react": "^5.3.7",
		"@types/jest": "^24.9.0",
		"@types/react": "^16.9.17",
		"@types/react-dom": "^16.9.4",
		"@types/yup": "^0.26.27",
		"@typescript-eslint/eslint-plugin": "^2.16.0",
		"@typescript-eslint/parser": "^2.16.0",
		"@typescript-eslint/typescript-estree": "^2.16.0",
		"babel-loader": "^8.0.6",
		"dotenv": "^8.2.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.8.0",
		"eslint-plugin-react": "^7.18.0",
		"eslint-plugin-react-hooks": "^2.3.0",
		"eslint-plugin-react-perf": "^3.2.3",
		"install": "^0.13.0",
		"jest": "^24.9.0",
		"npm": "^6.13.6",
		"prettier": "^1.19.1",
		"storybook": "^5.3.7",
		"stylelint": "^13.0.0",
		"stylelint-config-recommended-scss": "^4.1.0",
		"stylelint-order": "^4.0.0",
		"stylelint-prettier": "^1.1.2",
		"stylelint-scss": "^3.13.0",
		"typescript": "^3.7.5"
	},
	"jest": {
		"transform": {
			".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		},
		"mapCoverage": true,
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/lib/",
			"/.next/"
		],
		"testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"json"
		]
	}
}
